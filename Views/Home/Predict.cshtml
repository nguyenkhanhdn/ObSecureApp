
@{
    ViewData["Title"] = "Predict";
    Layout = "~/Views/Shared/_ContLayout.cshtml";
}

@section heading{
    Chẩn đoán văn bản
}

@section commentForm{
    <!-- Comment Form Section -->
    <section id="comment-form" class="comment-form section">
        <div class="container">

           <form method="post" asp-controller="Home" asp-action="Predict">

                <h4>Gửi ý kiến</h4>
                <p>Các trường có dấu (*) là yêu cầu phải nhập.</p>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <input name="name" type="text" class="form-control" placeholder="admin">
                    </div>
                    <div class="col-md-6 form-group">
                        <input name="email" type="text" class="form-control" placeholder="admin@netguard.com">
                    </div>
                </div>
                
                <div class="row">
                    <div class="col form-group">
                        <textarea name="comment" class="form-control" placeholder="Ý kiến"></textarea>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" name="submit" class="btn btn-primary"> Gửi </button>
                </div>

            </form>

        </div>
    </section><!-- /Comment Form Section -->
}
<h1>Chẩn đoán văn bản</h1>

<hr/>

<h3>Kết quả chẩn đoán: </h3>
@if (@ViewBag.Label != null)
{
    @if(ViewBag.Label){
        <strong style="color:red;">
            Label: @ViewBag.Label
        </strong>
    }
    else
    {
        <strong style="color:green;">
            Label: @ViewBag.Label
        </strong>
    }
    <br />
    <strong>
        Score: @ViewBag.Probability
    </strong>
    <br />
}else{
    <strong style="color:black;">
        Dữ liệu an toàn.
    </strong>   
}